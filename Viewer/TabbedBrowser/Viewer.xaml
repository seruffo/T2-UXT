<Window x:Class="EO.TabbedBrowser.Viewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EO.TabbedBrowser"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1360" ContentRendered="Window_ContentRendered" KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">
    <Grid x:Name="grd_viewer" Background="Black">
        <Grid Height="392" Width="754" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="303,152,303,224">
            <Border BorderBrush="White" BorderThickness="1" Height="100" Width="100" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="262,87,392,0"/>
            <Label Content="Utilize as seguntes teclas para navegar entre as telas:" Foreground="White" FontSize="32" Margin="0,0,0,297"/>
            <Border BorderBrush="White" BorderThickness="1" Height="100" Width="100" CornerRadius="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="379,86,0,0"/>
            <Label Content="Para ajustar o posicionamento utilize:" Foreground="White" FontSize="24" Margin="175,239,175,69" HorizontalAlignment="Center"/>
            <Grid Margin="308,296,302,-36" HorizontalAlignment="Center" Width="144">
                <Border BorderBrush="White" BorderThickness="1" Height="43" Width="43" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,47,0,0"/>
                <Border BorderBrush="White" BorderThickness="1" Height="43" Width="43" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,0,0,0"/>
                <Border BorderBrush="White" BorderThickness="1" Height="43" Width="43" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="48,47,0,0"/>
                <Border BorderBrush="White" BorderThickness="1" Height="43" Width="43" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="96,47,0,0"/>
            </Grid>
            <Label Content="W" Foreground="White" Margin="353,305,380,62" HorizontalAlignment="Center"/>
            <Label Content="A" Foreground="White" Margin="319,351,414,16" HorizontalAlignment="Center"/>
            <Label Content="S" Foreground="White" Margin="368,351,368,16" HorizontalAlignment="Center"/>
            <Label Content="D" Foreground="White" Margin="417,351,317,16" HorizontalAlignment="Center" Width="20"/>
            <Label Content="←" Foreground="White" Margin="287,107,417,220" HorizontalAlignment="Center" FontSize="40" FontFamily="Arial"/>
            <Label Content="→" Foreground="White" Margin="403,107,301,220" HorizontalAlignment="Center" FontSize="40" FontFamily="Arial"/>
        </Grid>
        <Image x:Name="img_read" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0"/>
        <Canvas x:Name="canvas" Margin="0"/>
        <Grid x:Name="grd_newGrid" Height="60" VerticalAlignment="Bottom" Margin="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF7F9FF" Offset="0"/>
                    <GradientStop Color="#FF425270" Offset="1"/>
                    <GradientStop Color="#FF737A89" Offset="0.9"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Rectangle Height="1" Margin="0" VerticalAlignment="Top" Fill="#33000000"/>

            <Grid Margin="0,10,705,10" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Ellipse Margin="99,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="27" Height="27">
                    <Ellipse.Stroke>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#3F000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Blue" Offset="0"/>
                            <GradientStop Offset="1"/>
                            <GradientStop Color="Blue" Offset="0.25"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Label Content="Waiting" Margin="126,5,0,0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Ellipse Margin="0,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="27" Height="27">
                    <Ellipse.Stroke>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#3F000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Red" Offset="0"/>
                            <GradientStop Offset="1"/>
                            <GradientStop Color="Red" Offset="0.25"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Label Content="Click" Margin="27,5,0,0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Ellipse Margin="195,7,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="26" Height="27">
                    <Ellipse.Stroke>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="0"/>
                            <GradientStop Color="#3F000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="Magenta" Offset="0"/>
                            <GradientStop Offset="1"/>
                            <GradientStop Color="Magenta" Offset="0.25"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Label Content="Click + Waiting" Margin="221,5,0,0" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Rectangle HorizontalAlignment="Left" Height="40" Margin="344,0,0,0" VerticalAlignment="Center" Width="1" Fill="#7F000000" Stroke="#3F000000"/>
                <Rectangle HorizontalAlignment="Left" Height="40" Margin="-18,0,0,0" VerticalAlignment="Center" Width="1" Fill="#7F000000" Stroke="#3F000000"/>
            </Grid>
            <Grid Margin="0,16,75,15" HorizontalAlignment="Right" Width="620">
                <Label Content="Clicks:" Margin="0,0,0,1" HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="txb_click" HorizontalAlignment="Left" Margin="51,5,0,5" TextWrapping="Wrap" Text=" " VerticalAlignment="Center" FontSize="14"/>
                <Label Content="Time:" Margin="118,0,0,0" HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="txb_time" HorizontalAlignment="Left" Margin="165,5,0,5" TextWrapping="Wrap" Text=" " VerticalAlignment="Center" FontSize="14"/>
                <Label Content="Mouse Stopped:" Margin="232,0,0,0" HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="txb_freeze" HorizontalAlignment="Left" Margin="348,5,0,5" TextWrapping="Wrap" Text=" " VerticalAlignment="Center" FontSize="14"/>
                <Label Content="Mouse Moving:" Margin="415,0,0,0" HorizontalAlignment="Left" FontSize="14" VerticalAlignment="Center" FontWeight="Bold"/>
                <TextBlock x:Name="txb_move" HorizontalAlignment="Left" Margin="527,5,0,5" TextWrapping="Wrap" Text=" " VerticalAlignment="Center" FontSize="14"/>
            </Grid>
            <Image Margin="0,10,11,10" Source="ufpaLogoBlack.png" Stretch="Fill" Opacity="0.35" Width="32" Height="40" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>
        <ListBox x:Name="ltb_keylogger" Height="120" HorizontalAlignment="Left" VerticalContentAlignment="Top" VerticalAlignment="Bottom" Width="293" Foreground="Black">
            <ListBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FF425270" Offset="1"/>
                    <GradientStop Color="#FF737A89" Offset="0.873"/>
                </LinearGradientBrush>
            </ListBox.BorderBrush>
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FF425270" Offset="1"/>
                    <GradientStop Color="White" Offset="0.5"/>
                    <GradientStop Color="#FF737A89" Offset="0.955"/>
                </LinearGradientBrush>
            </ListBox.Background>
        </ListBox>

    </Grid>
</Window>
